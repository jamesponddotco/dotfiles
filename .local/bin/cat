#!/bin/bash
#
# Script Name: Cat
# Script URL: https://git.sr.ht/~jamesponddotco/dotfiles
# Version: 1.0.0
# Author: James Pond
# Author URL: https://jamespond.co/
# License: European Union Public License 1.2 or later
# License URI: https://joinup.ec.europa.eu/collection/eupl/eupl-text-11-12
#

# Enable "bash strict mode".
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'

# Use glow to render markdown files, and bat for everything else instead of cat
# itself.
if [[ "${1-}" = *.md ]]; then
  /usr/local/bin/glow "$@"
elif [[ "${1-}" = '--no-bat' ]]; then
  /usr/bin/cat "${@:2}"
else
  /usr/local/bin/bat --theme='Nord' --style='numbers,changes' "$@"
fi

# All was well.
exit 0
