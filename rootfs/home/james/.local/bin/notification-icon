#!/usr/bin/env bash

dnd="$(swaync-client --get-dnd)"
notifications="$(swaync-client --count)"
icon_path="${HOME}/.local/share/icons/Adwaita/"

if [[ "${dnd}" == "false" ]]; then
  if [[ "${notifications}" -gt 0 ]]; then
    icon='notifications-new-symbolic.svg'
  else
    icon='notifications-symbolic.svg'
  fi
else
  icon='notifications-disabled-symbolic.svg'
fi

printf '%s' "${icon_path}${icon}"

# All was well.
exit 0
