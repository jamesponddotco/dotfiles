#!/usr/bin/env bash
#
# Script Name: Cyberdrop Dump
# Script URL: https://git.sr.ht/~jamesponddotco/dotfiles
# Description: Download all videos from a given CyberDrop URL.
# Version: 0.1.0
# Author: James Pond
# Author URL: https://jamespond.co/
# License: European Union Public License 1.2 or later
# License URI: https://joinup.ec.europa.eu/collection/eupl/eupl-text-11-12
#

# Use bash's "unofficial strict mode".
set -o errexit -o nounset -o errtrace -o pipefail
IFS=$'\n\t'

# Force all output to use the simplest locale.
LC_ALL='C'
readonly LC_ALL

# Color variables to make our output a little easier on the eyes. Respect
# NO_COLOR, in case the user does not want any.
if [[ -t 1 && -z "${NO_COLOR:-}" ]]; then
  c_blue='\033[0;34m'
  c_green='\033[0;32m'
  c_bold='\033[1m'
  c_reset='\033[0m'
  readonly c_blue
  readonly c_green
  readonly c_bold
  readonly c_reset
fi

# Grab links to all videos from a CyberDrop URL and save them for wget.
firejail \
  --quiet \
  --dns=127.0.5.3 \
  --apparmor \
  --seccomp \
  --profile='/etc/firejail/lynx.profile' \
  lynx -dump -listonly -nonumbers "${1:-}" \
  | grep -E 'mp4|mov|mkv|webm' \
  | awk '!a[$0]++' > "${TMP:-/tmp}/cyberdrop-dump"
video_count="$(awk 'END{print NR}' "${TMP:-/tmp}/cyberdrop-dump")"
readonly video_count

# Let the user know we are starting the download process.
echo -e "${c_blue:-}${c_bold:-}[INFO]${c_reset:-} Found $video_count videos."
echo -e "${c_blue:-}${c_bold:-}[INFO]${c_reset:-} Download in progress, please \
wait..."

# Download the videos to the current directory using wget.
wget --inet4-only --no-cookies --https-only --quiet --input-file \
  "${TMP:-/tmp}/cyberdrop-dump"

# Remove the temporary batch file.
rm --force "${TMP:-/tmp}/cyberdrop-dump"

# Let the user know that the videos have been downloaded.
echo -e "${c_green:-}${c_bold:-}[SUCCESS]${c_reset:-} Done."

# All was well.
exit 0
